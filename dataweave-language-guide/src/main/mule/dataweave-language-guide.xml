	<flow name="language-guide" doc:id="c242f70f-1e24-428e-aac6-aad7e0f06c8d" >
		<ee:transform doc:name="Transform Message" doc:id="f1421fce-0145-4d9e-82d5-8be788f2f9db" >
			<ee:message >
				<ee:set-payload ><![CDATA[%dw 2.0
output application/json
